{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": 
    {
        "vmName": 
        {
            "type": "string",
            "metadata": 
            {
                "description": "Nome da VM"
            }
        },
        "location": 
        {
            "type": "string",
            "metadata": 
            {
                "description": "Localização de deploy da VM"
            }
        },
        "vmSize": 
        {
            "type": "string",
            "metadata": 
            {
                "description": "Tamanho da instância (CPU, Memória)(F2s_vs, F4s_v2 ou D2as_v4)"
            },
            "allowedValues": 
            [
                "Standard_F2s_v2",
                "Standard_F4s_v2",
                "Standard_D2as_v4"
            ]
        },
        "maxPriceP": 
        {
            "type": "string",
            "metadata": 
            {
                "description": "Preço máximo da instância Spot"
            }
        },
        "nameNetworkProfile": 
        {
            "type": "string",
            "metadata": 
            {
                "description": "Nome do perfil de rede"
            }
        }
        /* "dataDisks": 
        {
          "type": "array",
          "metadata": 
          {
            "description": "Dados do disco adicional"
          }
        } */
    },


    "functions": [],


    "variables": 
    {
      
    },


    "resources": 
    [
    {
    "type": "Microsoft.Compute/virtualMachines",
    "apiVersion": "2021-07-01",
    "name": "[parameters('vmName')]",
    "location": "[parameters('location')]",
    "properties": 
    {
      "securityProfile": 
      {
        "securityType": "TrustedLaunch",
        "uefiSettings": 
        {
          "secureBootEnabled": true,
          "vTpmEnabled": true
        }
      },
      "diagnosticsProfile": 
      {
        "bootDiagnostics": 
        {
            "enabled": true
        }
      },
      //Necessário apenas em imagem generalizada
      /* "osProfile": 
      {
         "computerName": "[parameters('vmName')]",
        "adminUsername": "user",
        "adminPassword": "pass"
      }, */
      "networkProfile": 
      {
        "networkInterfaces":
        [
          {
            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nameNetworkProfile'))]"
          }
        ]
      },
      "hardwareProfile": 
      {
        "vmSize": "[parameters('vmSize')]"
      },
      "storageProfile": 
      {
        "dataDisks": 
        [
        {
            "createOption": "Attach",
            "managedDisk": 
            {
                "id": "/subscriptions/31fad7a5-8666-4bfd-8b77-efae9758905b/resourceGroups/dev-geral/providers/Microsoft.Compute/disks/vscode_data01"
            },
            "lun": 1
        }
        ],
        "osDisk": 
        {
          "createOption": "fromImage",
          "managedDisk": {
              "storageAccountType": "Standard_LRS"
          },
          "deleteOption": "Delete"
        },
        "imageReference": 
        {
          "id": "/subscriptions/31fad7a5-8666-4bfd-8b77-efae9758905b/resourceGroups/dev-geral/providers/Microsoft.Compute/galleries/geral/images/vscode1"
        }
      },
      "priority": "Spot",
      "evictionPolicy": "Deallocate",
      "billingProfile":
      {
      "maxPrice": "[parameters('maxPriceP')]"
      }
    }
  }
],


    "outputs": {}
}